{% extends '@Backend/layout.html.twig' %}

{% block contenido %}

    <h1 class="page-header">
        Cambio de contrase&ntilde;a
    </h1>




    <div class="col-lg-6">
        {{ form_start(form) }}
        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_label(form.password, 'Nueva contraseña:') }}
            {{ form_errors(form.password) }}
            {{ form_widget(form.password, {'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            {{ form_label(form.password2, 'Repita la Contraseña:') }}
            {{ form_errors(form.password2) }}
            {{ form_widget(form.password2, {'attr': {'class': 'form-control'} }) }}
        </div>

        <ul class="list-group list-unstyled list-inline">
            <li>
                <div class="form-group">
                    {{ form_widget(form.aceptar, {'attr': {'class': 'btn btn-default'} } ) }}

                </div>
            </li>
            <li>
                <div class="form-group">
                    <a href="{{ path('listar_usuarios') }}" class="btn btn-default">
                        Cancelar
                    </a>

                </div>
            </li>
        </ul>

        {{ form_rest(form) }}
        {{ form_end(form) }}


    </div>



{% endblock %}