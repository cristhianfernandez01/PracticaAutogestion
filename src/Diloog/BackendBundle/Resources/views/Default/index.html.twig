{% extends '@Backend/layout.html.twig' %}

{% block contenido %}
    <h1 class="page-header">
        Bienvenido al Area de Administracion
    </h1>
    <div class="well">
        <p>
        <h4>
            La informaci&oacute;n referida a las operaciones realizadas en segundo plano se muestran a continuaci&oacute;n
        </h4>
        </p>
    </div>

    <div class="row">
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-credit-card fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">{{ pagoenviado.fecha | date("d/m h:i") }}</div>
                            <div>Ultimo Envio de Pagos Realizados</div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-green">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-bookmark-o fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">{{ deuda.fecha | date("d/m h:i") }}</div>
                            <div>Ultima Recepcion de Deudas</div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-yellow">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-check-circle fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">{{ cambioestado.fecha | date("d/m h:i") }}</div>
                            <div>Ultima Recepcion Cambios Estado</div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-red">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-money fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">{{ pagorecibido.fecha | date("d/m h:i") }}</div>
                            <div>Ultima Recepcion de Pagos</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}