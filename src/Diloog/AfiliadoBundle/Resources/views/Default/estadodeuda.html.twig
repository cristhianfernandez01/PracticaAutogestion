{% extends '@Afiliado/layout.html.twig' %}

{% block contenido %}
    <h1 class="page-header" xmlns="http://www.w3.org/1999/html">
    Mis Deudas
    </h1>
    <div class="well">
        <p>
            Sus deudas a la fecha {{ "now" | date("d/m/Y") }}
        </p>
    </div>

    <table class="table table-bordered">
       <thead>
        <tr class="succes">
          <th>
              Codigo
          </th>
          <th>
              Concepto
          </th>
          <th>
              Fecha vencimiento
          </th>

          <th>
            Importe
          </th>
          <th>
            Subtotal
          </th>
        </tr>
       </thead>

        <tbody>
         {% for detalle in deuda.detallesdeuda %}
        <tr class="active">
             <td>{{ detalle.codigo }}</td>
             <td>{{ detalle.concepto }}</td>
             <td></td>
             <td></td>
             <td>$ {{ detalle.subtotal }}</td>
        </tr>
            {% for subdetalle in detalle.subdetallesdeuda %}
                <tr>
                    <td></td>
                    <td>{{ subdetalle.subconcepto }}</td>
                    <td></td>
                    <td>$ {{ subdetalle.importe }}</td>
                    <td></td>
                <tr>
             {% endfor %}
         {% endfor %}
        <tr>
             <td></td>
             <td></td>
             <td></td>
             <td colspan="2">
              <strong>Importe total de la deuda : $ {{ deuda.importeTotal }}</strong>
             </td>
        </tr>
        </tbody>
    </table>


{% endblock %}