{% extends '::base.html.twig' %}

{% block estilos %}
   <link href="C:\Proyectos\Symfony2\PracticaSupervisada\web\bundles\afiliado\css\bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container" >
        <div class="row">
            <table class="table table-responsive">
              <tr>
                 <td>
                   <img src="C:\Proyectos\Symfony2\PracticaSupervisada\web\Logo-CGCET.jpg" />
                   <p>Colegio de Graduados en Ciencias Economicas de Tucum&aacute;n </p>
                   <p>24 de Septiembre 776 - S.M. de Tucum&aacute;n</p>
                </td>
                <td>
                    <h4>Comprobante de Estado de Deuda</h4>
                    <p>"No utilizable como comprobante de pago"</p>
                    <p><strong>Estado de deuda Nro.: {{ deuda.numeroDeuda }}</strong></p>
                    <p>Fecha de emision de deuda: {{ deuda.fechaEmision|date("d/m/Y") }}</p>
                    <p>Fecha de comprobante: {{ 'now'|date("d/m/Y") }}</p>
                </td>
              </tr>
              <tr>
                  <td>
                      <p>Nombre del afiliado: {{ afiliado }}</p>
                      <p>DNI: {{ afiliado.dni }}</p>
                  </td>
                  <td>
                      <p>Numero de afiliado: {{ afiliado.numeroAfiliado }}</p>
                  </td>
              </tr>
          </table>
        </div>
      <div class="row">
        <div class="col-lg-12">
          <table class="table table-bordered">
            <thead>
            <tr >
                <th>
                    Codigo
                </th>
                <th>
                    Concepto
                </th>
                <th>
                    Fecha vencimiento
                </th>

                <th>
                    Importe
                </th>
                <th>
                    Subtotal
                </th>
            </tr>
            </thead>

            <tbody>
            {% for detalle in deuda.detallesdeuda %}
            <tr>
                <td>{{ detalle.codigo }}</td>
                <td>{{ detalle.concepto }}</td>
                <td></td>
                <td></td>
                <td>$ {{ detalle.subtotal }}</td>
            </tr>
            {% for subdetalle in detalle.subdetallesdeuda %}
            <tr>
                <td></td>
                <td>{{ subdetalle.subconcepto }}</td>
                <td>{{ subdetalle.fechaVencimiento|date("d/m/Y") }}</td>
                <td>$ {{ subdetalle.importe }}</td>
                <td></td>
            <tr>
                {% endfor %}
                {% endfor %}
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td colspan="2">
                    <strong>Importe total de la deuda : $ {{ deuda.importeTotal }}</strong>
                </td>
            </tr>
           </tbody>
        </table>
         </div>
       </div>
    </div>
{% endblock %}


